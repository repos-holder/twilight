
cc		= clang 
CC		= clang++

LIBS = -lm -framework OpenGL -framework GLUT

#///////////////////////////////////////////////////////////////////////////////

CFLAGS = --std=c++0x -g -I. -DOSX

#///////////////////////////////////////////////////////////////////////////////
# RULES

.SUFFIXES:	.cpp .o .obj

.cpp.o:
	$(CC) $(CFLAGS) -O3 -c $< -o $@ 

#///////////////////////////////////////////////////////////////////////////////

OBJS = drawfunc.o 

all:	$(OBJS)
	$(CC) main.cpp -o twilight $(CFLAGS) $(OBJS) $(LIBS)

#///////////////////////////////////////////////////////////////////////////////

clean:
	rm -f *.o
	rm -f ork/*.o 
	rm twilight

#///////////////////////////////////////////////////////////////////////////////
