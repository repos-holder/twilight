
cc		= clang 
CC		= clang++

LIBS = -lm -framework OpenGL -framework GLUT -framework Cocoa

#///////////////////////////////////////////////////////////////////////////////

CFLAGS = --std=c++0x -g -I. -DOSX

#///////////////////////////////////////////////////////////////////////////////
# RULES

.SUFFIXES:	.cpp .o .obj

.cpp.o:
	$(CC) -x objective-c++ $(CFLAGS) -O3 -c $< -o $@ 

#///////////////////////////////////////////////////////////////////////////////

OBJS = main.o drawfunc.o 

all:	$(OBJS)
	$(CC) -o twilight $(CFLAGS) $(OBJS) $(LIBS)

#///////////////////////////////////////////////////////////////////////////////

clean:
	rm -f *.o
	rm -f ork/*.o 
	rm twilight

#///////////////////////////////////////////////////////////////////////////////
