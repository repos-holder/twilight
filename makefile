
cc		= gcc
CC		= g++

LIBS = -lglut -lGLU -lGL -lX11 -lm -lrt

#///////////////////////////////////////////////////////////////////////////////

CFLAGS = --std=c++0x -g -I.

#///////////////////////////////////////////////////////////////////////////////
# RULES

.SUFFIXES:	.cpp .o .obj

.cpp.o:
	$(CC) $(CFLAGS) -O3 -c $< -o $@ 

#///////////////////////////////////////////////////////////////////////////////

OBJS = drawfunc.o 

all:	$(OBJS)
	$(CC) main.cpp -o twilight $(CFLAGS) $(OBJS) $(LIBS)

#///////////////////////////////////////////////////////////////////////////////

clean:
	rm -f *.o
	rm -f ork/*.o 
	rm twilight

#///////////////////////////////////////////////////////////////////////////////
